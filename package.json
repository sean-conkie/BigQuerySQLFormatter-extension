{
  "name": "bigquerysqlformatter",
  "displayName": "BigQuery SQL Formatter",
  "description": "VS Code extension providing BigQuery SQL syntax checking",
  "author": "sean-conkie",
  "license": "MIT",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/sean-conkie/BigQuerySQLFormatter-extension.git"
  },
  "publisher": "sean-conkie",
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "keywords": [
    "multi-root ready",
    "language server",
    "bigquery",
    "sql"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:sql",
    "onLanguage:sql-biqquery",
    "onLanguage:legacy-sql",
    "onLanguage:bigquery-sql"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "BigQuerySQLFormatter",
      "properties": {
        "bigquerySQLFormatter.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "bigquerySQLFormatter.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "mocha": "^10.3.0",
    "typescript": "^5.3.3"
  }
}
