{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "out",
    "rootDir": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src", "src/**/googlesql.tmLanguage.json", "src/**/syntax.json"],
  "exclude": ["node_modules", ".vscode-test"]
}
